<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:gravity="center"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/SonarLogo"
        android:layout_width="192dp"
        android:layout_height="193dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sonar_logo_transparent" />

    <EditText
        android:id="@+id/userPasswordEntry"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:autoText="false"
        android:ems="10"
        android:hint="Enter password"
        android:inputType="text"
        android:shadowColor="#000000"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#00BCD4"
        android:textColorHint="#8DFFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/signInButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/signInButton"
        app:layout_constraintTop_toBottomOf="@+id/nameLabel" />

    <EditText
        android:id="@+id/UserNameEntry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoText="false"
        android:ems="10"
        android:hint="Enter name"
        android:inputType="text"
        android:shadowColor="#000000"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#00BCD4"
        android:textColorHint="#8DFFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/userPasswordEntry"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nameLabel"
        app:layout_constraintTop_toBottomOf="@+id/NameLabel" />

    <EditText
        android:id="@+id/UserPhoneEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:autoText="false"
        android:ems="10"
        android:hint="(XXX)-XXX-XXXX"
        android:inputType="phone"
        android:shadowColor="#000000"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#00BCD4"
        android:textColorHint="#8DFFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/UserNameEntry"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/NameLabel"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumberLabel" />

    <TextView
        android:id="@+id/NameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/oxygen"
        android:letterSpacing=".09"
        android:text="name"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/UserNameEntry"
        app:layout_constraintTop_toBottomOf="@+id/UserPhoneEntry" />

    <TextView
        android:id="@+id/phoneNumberLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/oxygen"
        android:letterSpacing=".09"
        android:text="mobile number"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/UserPhoneEntry"
        app:layout_constraintTop_toBottomOf="@+id/SignUpText" />

    <TextView
        android:id="@+id/SignUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/oxygen"
        android:shadowColor="#000000"
        android:text="Log In"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SonarLogo" />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/purple_500"
        android:fontFamily="@font/oxygen"
        android:text="Log In"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPasswordEntry" />

    <TextView
        android:id="@+id/DontHaveAccTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/oxygen"
        android:text="Don't have an account?"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/signInButton"
        app:layout_constraintTop_toBottomOf="@+id/signInButton" />

    <TextView
        android:id="@+id/SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up â†’"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/DontHaveAccTxt"
        app:layout_constraintTop_toBottomOf="@+id/DontHaveAccTxt" />

    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/oxygen"
        android:letterSpacing=".09"
        android:text="password"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/userPasswordEntry"
        app:layout_constraintTop_toBottomOf="@+id/UserNameEntry" />


</androidx.constraintlayout.widget.ConstraintLayout>