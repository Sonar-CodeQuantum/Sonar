<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".SigninLoginOption">

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="134dp"
        android:layout_height="68dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="44dp"
        android:fontFamily="@font/oxygen"
        android:text="Log In"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SonarLogoSignInSignUp"
        app:layout_constraintVertical_bias="0.143" />

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="134dp"
        android:layout_height="68dp"
        android:layout_marginTop="51dp"
        android:fontFamily="@font/oxygen"
        android:text="Sign Up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/loginBtn"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SonarLogoSignInSignUp"
        app:layout_constraintVertical_bias="0.143" />

    <ImageView
        android:id="@+id/SonarLogoSignInSignUp"
        android:layout_width="305dp"
        android:layout_height="334dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.138"
        app:srcCompat="@drawable/sonar_logo_transparent" />

    <TextView
        android:id="@+id/SonarTextSignInSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="309dp"
        android:layout_marginBottom="332dp"
        android:fontFamily="@font/oxygen"
        android:letterSpacing=".03"
        android:text="SONAR"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/SonarLogoLoading"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>